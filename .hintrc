{
  "extends": [
    "development"
  ],
  "hints": {
    "button-type": "off",
    "axe/aria": [
      "default",
      {
        "aria-required-children": "off",
        "aria-valid-attr-value": "off",
        "aria-required-parent": "off",
        "aria-command-name": "off"
      }
    ],
    "no-inline-styles": "off",
    "axe/structure": [
      "default",
      {
        "list": "off",
        "listitem": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "flex-direction",
          "gap"
        ]
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "link-name": "off",
        "button-name": "off"
      }
    ],
    "meta-viewport": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "iframe[allow]",
          "iframe[allowfullscreen]"
        ]
      }
    ]
  }
}